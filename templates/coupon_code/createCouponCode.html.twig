{% extends 'base.html.twig' %}
{% block title %}Créer un code promotionnel{% endblock %}
{% block reseauSociaux %}
    <!-- Facebook -->
    <meta property="og:url"
          content="{{ app.request.uri }}"/>
    <meta property="og:type"
          content="website"/>
    <meta property="og:title"
          content="Créez votre code promotionnel"/>
    <meta property="og:description"
          content="Créez votre code promotionnel afin d'en faire profiter les membres."/>
    <meta property="og:image"
          content="https://nsa40.casimages.com/img/2019/01/21/190121042431976526.png"/>
    <!-- Twitter -->
    <meta name="twitter:card"
          content="summary">
    <meta name="twitter:title"
          content="Créez votre code promotionnel">
    <meta name="twitter:description"
          content="Créez votre code promotionnel afin d'en faire profiter les membres.">
{% endblock %}

{% block body %}
    <h1 class="my-4">
        {% if editMode %}
            Modifier le code
        {% else %}
            Créer un nouveau code
        {% endif %}
    </h1>
    {{ form_start(form) }}
    {{ form_row(form.name, {'label': 'Nom', 'attr': {'placeholder': 'Le nom du nouveau code'}}) }}
    {{ form_row(form.ticket, {'label': 'Tickets', 'attr': {'placeholder': 'Le nombre de tickets que rapporte ce code'}}) }}
    {{ form_row(form.maxUse, {'label': 'Nombre d\'utilisation maximale', 'attr': {'placeholder': 'Le nombre d\'utilisation maximale de ce code'}}) }}
    {{ form_row(form.endDate, {'label': 'Date de fin', 'attr': {'placeholder': 'La date d\'expiration de ce code'}}) }}
    {{ form_row(form.code, {'label': 'code', 'attr': {'placeholder': 'Le code que les utilisateurs devront utiliser'}}) }}
    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Modifier
        {% else %}
            Créer
        {% endif %}
    </button>
    {{ form_end(form) }}
{% endblock %}