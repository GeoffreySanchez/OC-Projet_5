{% extends 'base.html.twig' %}
{% block title %}Identifiez-vous{% endblock %}
{% block reseauSociaux %}
    <!-- Facebook -->
    <meta property="og:url"
          content="{{ app.request.uri }}"/>
    <meta property="og:type"
          content="website"/>
    <meta property="og:title"
          content="GL & HF, identifiez vous !"/>
    <meta property="og:description"
          content="Venez vous identifier ou même vous inscrire si ce n'est pas déjà fait !"/>
    <meta property="og:image"
          content="https://nsa40.casimages.com/img/2019/01/21/190121042431976526.png"/>
    <!-- Twitter -->
    <meta name="twitter:card"
          content="summary">
    <meta name="twitter:title"
          content="GL & HF, identifiez vous !">
    <meta name="twitter:description"
          content="Venez vous identifier ou même vous inscrire si ce n'est pas déjà fait !">
{% endblock %}

{% block body %}
    <h1 class="my-4">Connexion</h1>
    <form action="{{ path('login_page') }}" method="post">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Adresse email" required name="_username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Mot de passe" required name="_password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">connexion</button>
        </div>
    </form>
{% endblock %}