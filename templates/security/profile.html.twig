{% extends 'base.html.twig'%}

{% block body %}
    <h1>Bienvenue sur votre espace privé {{ user.username }}</h1>
    {% if user.active == false %}
        <p class="lead">Veuillez valider votre compte avec le lien reçu par mail pour pouvoir utiliser l'intégralité des fonctionnalité du site.</p>
        {% for message in app.flashes('accountCreationSuccess') %}
            <div class="alert alert-dismissible alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ message }}
            </div>
        {% endfor %}
    {% else %}
        <div>
            <p class="lead">Avec votre espace personnelle, vous avez la possibilité de modifier vos données personnelles ou acheter des tickets supplémentaires.</p>
            {% for message in app.flashes('accountActivation') %}
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('accountAlreadyActivate') %}
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    {{ message }}
                </div>
            {% endfor %}
            <ul>
                <li>
                    <a href="{{ path('profileModification_page') }}">Modifier mes informations personnelles</a>
                </li>
                <li>
                    <a href="{{ path('earnTicket_page') }}">Obtenir des tickets</a>
                </li>
            </ul>
        </div>
    {% endif %}
{% endblock %}
